<template name='comic-needleful-multipage'>
	<param name='title' type='text'/>
	<param name='page' type='integer'/>
	<param name='sources' type='list'>
		<param name='source' type='file'/>
	</param>
	<param name='description' type='xml' required='false'/>
	<param name='transcript' type='xml'/>
	<content>
		<html>
			<head>
				<title>[[title]] - Needleful</title>
				<link rel='stylesheet' href='/needleful.css'/>
				<script type='text/javascript' src='/needleful.js'/>
			</head>
			<body>
				<div id='content'>
					<div id='titlebar'>
						<ul class='navbar'>
							<li><a href='/'>needleful dot net</a> / </li>
							<li><a href='/comic/needleful'>needleful comic</a> /</li>
							<li>page [[page]] </li>
						</ul>
						<button id='burger-button' class='not-clicked' aria-label='burger button' onclick='burgerClicked()'>
							<img id='burger-img' alt='burger button' src='/burger.svg'/>
						</button>
						<div id='burger-block' class='noshow'>
							<img class='full-line' style='min-width: 400px;' src='/img/burger.jpg'/>
							<p class='epic full-line'>Burger.</p>
						</div>
					</div>
					<div class='comic-wrapper'>
						<foreach list='sources' i='i'>
							<img class='comic' src='[[source]]' alt='Comic: [[title]] page [[i]]'/>
							<br />
						</foreach>
					</div>
					<ul id='comic-buttons'>
						<match val='[[page == 1]]'>
							<true>
								<li>At the first!</li>
							</true>
							<false>
								<li><a href='/comic/needleful/1.html' class='align-left'>First</a></li>
								<li><a href='/comic/needleful/[[page - 1]].html' class='align-left'>Previous</a> </li>
							</false>
						</match>

						<li><a href='/comic/needleful/archive' class='align-center'>Archive</a></li>

						<match val='src_file_exists("[[page + 1]].page.xml")'>
							<true>
								<li><a href='/comic/needleful/[[page + 1]].html' class='align-right'>Next</a></li>
							</true>
							<false>
								<li>Come back later!</li>
							</false>
						</match>
					</ul>
					<h1>[[title]]</h1>
					[[description]]
					<details>
						<summary>Transcript</summary>
						[[transcript]]
					</details>
					<h2>Latest Comics:</h2>
					<iframe src='latest.html' width='100%' height='400px'/>
				</div>
			</body>
		</html>
	</content>
</template>