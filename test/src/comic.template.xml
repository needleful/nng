<!-- Comic Formats -->
<template name='comic-needleful'>
	<param name='title' type='text'/>
	<param name='page' type='integer'/>
	<param name='source' type='file'/>
	<param name='description' type='xml' required='false'/>
	<param name='transcript' type='xml'/>
	<content>
		<comic-needleful-multipage>
			<title>[[title]]</title>
			<page>[[page]]</page>
			<sources>
				<source>[[source]]</source>
			</sources>
			<description>[[description]]</description>
			<transcript>[[transcript]]</transcript>
		</comic-needleful-multipage>
	</content>
</template>