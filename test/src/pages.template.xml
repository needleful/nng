<templates>
	<template name='page'>
		<param name='number' type='integer'/>
		<content>
			<match val='src_file_exists("index[[number-1]].page.xml")'>
				<true>
					<a href='index[[number-1]].html'>Previous</a>
				</true>
			</match>
			<match val='src_file_exists("index[[number+1]].page.xml")'>
				<true>
					<a href='index[[number+1]].html'>Next</a>
				</true>
			</match>
		</content>
	</template>
</templates>